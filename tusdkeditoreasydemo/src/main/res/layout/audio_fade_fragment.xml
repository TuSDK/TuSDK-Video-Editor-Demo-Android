<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/lsq_editor_panel_bg">

    <TextView
        android:id="@+id/lsq_fade_state_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text=" 背景音乐 \n 音乐名称 city_sunshine.mp4 \n 音乐淡入淡出"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <cn.bar.DoubleHeadedDragonBar
        android:id="@+id/lsq_fade_start_bar"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="14dp"
        app:bg_color="@color/lsq_color_api_gray"
        app:button_height="30dp"
        app:button_img="@mipmap/sel_ic"
        app:button_width="30dp"
        app:layout_constraintLeft_toLeftOf="@id/lsq_fade_state_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lsq_fade_state_title"
        app:seek_height="4dp"
        app:value_color="@color/lsq_seek_value_color" />


    <TextView
        android:id="@+id/lsq_fade_state"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lsq_fade_start_bar" />


</androidx.constraintlayout.widget.ConstraintLayout>
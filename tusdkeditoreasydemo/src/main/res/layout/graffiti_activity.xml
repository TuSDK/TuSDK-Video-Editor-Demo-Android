<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/lsq_editor_panel_bg"
    android:layout_height="match_parent">


    <include
        android:id="@+id/lsq_title_layer"
        layout="@layout/include_title_layer"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/lsq_graffiti_menu"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <Button
            android:enabled="false"
            android:layout_marginLeft="10dp"
            android:text="撤销"
            android:textColor="@color/white"
            android:id="@+id/lsq_revoke_graffiti"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintWidth_percent="0.4"
            app:layout_constraintWidth_default="percent"
            android:layout_width="0dp"
            android:layout_height="40dp"/>

        <Button
            android:layout_marginRight="10dp"
            app:layout_constraintWidth_percent="0.4"
            app:layout_constraintWidth_default="percent"
            android:text="添加新的涂鸦"
            android:textSize="14sp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/lsq_add_graffiti"
            android:layout_width="0dp"
            android:layout_height="40dp"/>

        <Button
            android:layout_marginRight="10dp"
            app:layout_constraintWidth_percent="0.4"
            app:layout_constraintWidth_default="percent"
            android:visibility="gone"
            android:id="@+id/lsq_stop_graffiti"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="停止绘制"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_width="0dp"
            android:layout_height="40dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/lsq_graffiti_size_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="40dp"
        android:text="大小"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/lsq_graffiti_menu"
        app:layout_constraintLeft_toLeftOf="parent" />

    <SeekBar
        android:id="@+id/lsq_graffiti_size_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:max="24"
        android:min="2"
        android:maxHeight="4dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:progressDrawable="@drawable/lsq_model_seekbar_bg"
        android:thumb="@drawable/lsq_model_seekbar_thumb"
        android:thumbOffset="0dp"
        android:progress="12"
        app:layout_constraintBottom_toBottomOf="@id/lsq_graffiti_size_title"
        app:layout_constraintLeft_toRightOf="@id/lsq_graffiti_size_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/lsq_graffiti_size_title" />

    <TextView
        android:id="@+id/lsq_graffiti_color_titleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:text="@string/lsq_magic_color"
        android:textColor="@color/lsq_color_white"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/lsq_graffiti_size_title"
        app:layout_constraintLeft_toLeftOf="@id/lsq_graffiti_size_title" />

    <org.lasque.tusdkeditoreasydemo.base.views.ColorView
        android:layout_marginStart="15dp"
        android:id="@+id/lsq_graffiti_color_bar"
        layout="@layout/widget_seekbar"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_marginEnd="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        app:layout_constraintBottom_toBottomOf="@id/lsq_graffiti_color_titleView"
        app:layout_constraintLeft_toRightOf="@id/lsq_graffiti_color_titleView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/lsq_graffiti_color_titleView" />




    <RelativeLayout
        android:id="@+id/lsq_graffiti_layer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/lsq_graffiti_displayView"
        app:layout_constraintLeft_toLeftOf="@id/lsq_graffiti_displayView"
        app:layout_constraintRight_toRightOf="@id/lsq_graffiti_displayView"
        app:layout_constraintTop_toTopOf="@id/lsq_graffiti_displayView" />

    <com.tusdk.pulse.DisplayView
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintHeight_default="percent"
        android:id="@+id/lsq_graffiti_displayView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lsq_title_layer" />

    <ImageView
        app:layout_constraintTop_toBottomOf="@id/lsq_graffiti_displayView"
        android:id="@+id/lsq_graffiti_play"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/edit_ic_play"
        app:layout_constraintLeft_toLeftOf="parent"
        />


    <TextView
        android:id="@+id/lsq_player_duration"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:gravity="center"
        android:text="00:00/00:00"
        android:textColor="@color/white"
        android:textSize="13sp"
        app:layout_constraintTop_toTopOf="@id/lsq_graffiti_play"
        app:layout_constraintBottom_toBottomOf="@id/lsq_graffiti_play"
        app:layout_constraintRight_toRightOf="parent"
        />
    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="30dp"
        app:layout_constraintLeft_toRightOf="@id/lsq_graffiti_play"
        app:layout_constraintTop_toTopOf="@id/lsq_graffiti_play"
        app:layout_constraintBottom_toBottomOf="@id/lsq_graffiti_play"
        app:layout_constraintRight_toLeftOf="@id/lsq_player_duration"
        />

    <TextView
        android:id="@+id/lsq_start_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="涂鸦起止位置"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/lsq_graffiti_play"
        app:layout_constraintLeft_toLeftOf="@id/lsq_graffiti_play"
        app:layout_constraintBottom_toTopOf="@id/lsq_graffiti_color_titleView"
        />

    <cn.bar.DoubleHeadedDragonBar
        android:id="@+id/lsq_start_bar"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="14dp"
        app:bg_color="@color/lsq_color_api_gray"
        app:button_height="30dp"
        app:button_img="@mipmap/sel_ic"
        app:button_width="30dp"
        app:layout_constraintBottom_toBottomOf="@id/lsq_start_title"
        app:layout_constraintLeft_toRightOf="@id/lsq_start_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/lsq_start_title"
        app:seek_height="4dp"
        app:value_color="@color/lsq_seek_value_color" />



    <FrameLayout
        android:id="@+id/lsq_editor_cut_load"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:background="@color/lsq_alpha_black_7f"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <at.grabner.circleprogress.CircleProgressView
            android:id="@+id/lsq_editor_cut_load_parogress"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            app:cpv_barColor="@color/lsq_color_white"
            app:cpv_barWidth="2dp"
            app:cpv_maxValue="100"
            app:cpv_rimColor="@color/lsq_color_transparent"
            app:cpv_rimWidth="2dp"
            app:cpv_textColor="@color/lsq_color_transparent" />
    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
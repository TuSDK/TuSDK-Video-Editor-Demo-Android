<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--返回按钮-->
    <ImageView
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/lsq_editor_component_text_font_back"
        android:layout_width="76dp"
        android:layout_height="wrap_content"
        android:src="@drawable/edit_ic_return"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lsq_shadow_color_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="阴影颜色"
        android:textColor="@color/white"
        app:layout_constraintLeft_toRightOf="@id/lsq_editor_component_text_font_back"
        app:layout_constraintTop_toTopOf="parent"
        />

    <org.lasque.tusdkeditoreasydemo.base.views.ColorView
        android:id="@+id/lsq_shadow_color_bar"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.6"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        app:layout_constraintBottom_toBottomOf="@id/lsq_shadow_color_title"
        app:layout_constraintLeft_toRightOf="@id/lsq_shadow_color_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/lsq_shadow_color_title" />

    <TextView
        android:id="@+id/lsq_shadow_opacity_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="不透\n明度"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="@id/lsq_shadow_color_title"
        app:layout_constraintTop_toBottomOf="@id/lsq_shadow_color_title" />

    <SeekBar
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintWidth_default="percent"
        android:id="@+id/lsq_shadow_opacity_bar"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:max="100"
        android:progress="0"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="@id/lsq_shadow_opacity_title"
        app:layout_constraintLeft_toRightOf="@id/lsq_shadow_opacity_title"
        app:layout_constraintTop_toTopOf="@id/lsq_shadow_opacity_title" />

    <TextView
        android:id="@+id/lsq_shadow_blur_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="模糊\n强度"
        android:textColor="@color/white"
        app:layout_constraintLeft_toRightOf="@id/lsq_shadow_opacity_bar"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/lsq_shadow_opacity_title"
        app:layout_constraintBottom_toBottomOf="@id/lsq_shadow_opacity_title"
         />

    <SeekBar
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintWidth_default="percent"
        android:id="@+id/lsq_shadow_blur_bar"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:max="100"
        android:progress="50"
        app:layout_constraintLeft_toRightOf="@id/lsq_shadow_blur_title"
        app:layout_constraintTop_toTopOf="@id/lsq_shadow_blur_title"
        app:layout_constraintBottom_toBottomOf="@id/lsq_shadow_blur_title"/>

    <TextView
        android:id="@+id/lsq_shadow_distance_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="模糊\n距离"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="@id/lsq_shadow_opacity_title"
        app:layout_constraintTop_toBottomOf="@id/lsq_shadow_opacity_title"
        />

    <SeekBar
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintWidth_default="percent"
        android:id="@+id/lsq_shadow_distance_bar"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:max="100"
        android:progress="0"
        app:layout_constraintTop_toTopOf="@id/lsq_shadow_distance_title"
        app:layout_constraintBottom_toBottomOf="@id/lsq_shadow_distance_title"
        app:layout_constraintLeft_toRightOf="@id/lsq_shadow_distance_title"
        />

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/lsq_shadow_degree_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="旋转\n角度"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="@id/lsq_shadow_blur_title"
        app:layout_constraintTop_toBottomOf="@id/lsq_shadow_blur_title"/>


    <SeekBar
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintWidth_default="percent"
        android:id="@+id/lsq_shadow_degree_bar"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:max="360"
        android:progress="0"
        app:layout_constraintLeft_toRightOf="@id/lsq_shadow_degree_title"
        app:layout_constraintTop_toTopOf="@id/lsq_shadow_degree_title"
        app:layout_constraintBottom_toBottomOf="@id/lsq_shadow_degree_title"/>

</androidx.constraintlayout.widget.ConstraintLayout>
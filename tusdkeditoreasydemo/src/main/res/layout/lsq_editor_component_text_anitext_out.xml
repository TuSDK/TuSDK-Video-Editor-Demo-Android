<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/lsq_anitext_input_title"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:text="进入动画"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.3" />

    <TextView
        android:id="@+id/lsq_anitext_output_title"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="退出动画"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@id/lsq_anitext_input_title"
        app:layout_constraintRight_toLeftOf="@id/lsq_anitext_all_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.3" />

    <TextView
        android:id="@+id/lsq_anitext_all_title"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="整体动画"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@id/lsq_anitext_output_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.3" />

    <!--返回按钮-->
    <ImageView
        android:id="@+id/lsq_editor_component_text_font_back"
        android:layout_width="76dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/edit_ic_return"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lsq_anitext_input_title" />

    <RelativeLayout
        android:id="@+id/lsq_anitext_out_list_panel"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintLeft_toRightOf="@id/lsq_editor_component_text_font_back"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/lsq_editor_component_text_font_back">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/lsq_anitext_out_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="20dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/lsq_anitxt_duration_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="进入/退出 :"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/lsq_editor_component_text_font_back"
        app:layout_constraintTop_toBottomOf="@id/lsq_anitext_out_list_panel" />

    <TextView
        android:id="@+id/lsq_animation_start_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/lsq_alpha_white_99"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lsq_anitext_out_duration_bar" />

    <TextView
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lsq_animation_start_time"
        android:id="@+id/lsq_animation_end_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/lsq_alpha_white_99" />

    <com.jaygoo.widget.RangeSeekBar
        android:id="@+id/lsq_anitext_out_duration_bar"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintBottom_toBottomOf="@id/lsq_anitxt_duration_title"
        app:layout_constraintLeft_toRightOf="@id/lsq_anitxt_duration_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/lsq_anitxt_duration_title"
        app:rsb_gravity="center"
        app:rsb_indicator_show_mode="alwaysHide"
        app:rsb_mode="single"
        app:rsb_progress_color="@color/lsq_seek_value_color"
        app:rsb_progress_default_color="@color/lsq_icon_set_color"
        app:rsb_progress_height="4dp"
        app:rsb_progress_radius="4dp"
        app:rsb_thumb_height="14dp"
        app:rsb_thumb_scale_ratio="1.2"
        app:rsb_thumb_width="14dp"


        />
</androidx.constraintlayout.widget.ConstraintLayout>
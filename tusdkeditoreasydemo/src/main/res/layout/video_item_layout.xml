<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/lsq_editor_panel_bg"
    android:layout_marginBottom="4dp"
    android:layout_height="40dp">

    <TextView
        android:id="@+id/lsq_video_item_id"
        android:textSize="14sp"
        android:text="1"
        android:gravity="center"
        android:layout_marginStart="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/white"
        android:layout_width="10dp"
        android:layout_height="match_parent"/>

    <ImageView
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/lsq_video_item_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"/>



    <Button
        android:gravity="center"
        android:textSize="13sp"
        android:text="移除"
        android:id="@+id/lsq_video_item_remove"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="60dp"
        android:layout_height="match_parent"/>
    <Button
        android:gravity="center"
        android:textSize="13sp"
        android:text="上移"
        android:id="@+id/lsq_video_item_move_up"
        android:layout_marginEnd="6dp"
        app:layout_constraintRight_toLeftOf="@id/lsq_video_item_remove"
        android:layout_width="60dp"
        android:layout_height="match_parent"/>

    <Button
        android:gravity="center"
        android:textSize="13sp"
        android:text="下移"
        android:id="@+id/lsq_video_item_move_down"
        android:layout_marginEnd="6dp"
        app:layout_constraintRight_toLeftOf="@id/lsq_video_item_move_up"
        android:layout_width="60dp"
        android:layout_height="match_parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
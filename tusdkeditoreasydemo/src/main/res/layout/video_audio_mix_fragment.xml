<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lsq_editor_panel_bg">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lsq_editor_panel_bg">

        <TextView
            android:id="@+id/lsq_editor_current_state"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="13sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <TextView
            android:id="@+id/lsq_start_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:text="副音轨素材裁剪区间"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lsq_editor_current_state" />

        <cn.bar.DoubleHeadedDragonBar
            android:layout_marginStart="14dp"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="14dp"
            app:value_color="@color/lsq_seek_value_color"
            app:seek_height="4dp"
            app:bg_color="@color/lsq_color_api_gray"
            app:button_height="30dp"
            app:button_width="30dp"
            app:button_img="@mipmap/sel_ic"
            app:layout_constraintBottom_toBottomOf="@id/lsq_start_title"
            app:layout_constraintLeft_toRightOf="@id/lsq_start_title"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/lsq_start_title"
            android:id="@+id/lsq_start_bar"
            android:layout_width="0dp"
            android:layout_height="40dp" />


        <TextView
            android:id="@+id/lsq_sub_in_main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="副音轨\n开始位置"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="@id/lsq_start_title"
            app:layout_constraintRight_toRightOf="@id/lsq_start_title"
            app:layout_constraintTop_toBottomOf="@id/lsq_start_title" />

        <SeekBar
            android:id="@+id/lsq_sub_in_main_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:maxHeight="4dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:progressDrawable="@drawable/lsq_model_seekbar_bg"
            android:thumb="@drawable/lsq_model_seekbar_thumb"
            android:thumbOffset="0dp"
            app:layout_constraintBottom_toBottomOf="@id/lsq_sub_in_main_title"
            app:layout_constraintLeft_toLeftOf="@id/lsq_start_bar"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/lsq_sub_in_main_title" />

        <TextView
            android:id="@+id/lsq_main_audio_volume_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="主音轨\n音量\n(0~1)"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="@id/lsq_sub_in_main_title"
            app:layout_constraintRight_toRightOf="@id/lsq_sub_in_main_title"
            app:layout_constraintTop_toBottomOf="@id/lsq_sub_in_main_title" />

        <SeekBar
            android:id="@+id/lsq_main_audio_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:max="100"
            android:maxHeight="4dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:progress="100"
            android:progressDrawable="@drawable/lsq_model_seekbar_bg"
            android:thumb="@drawable/lsq_model_seekbar_thumb"
            android:thumbOffset="0dp"
            app:layout_constraintBottom_toBottomOf="@id/lsq_main_audio_volume_title"
            app:layout_constraintLeft_toLeftOf="@id/lsq_start_bar"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/lsq_main_audio_volume_title" />

        <TextView
            android:id="@+id/lsq_sub_audio_volume_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="副音轨\n音量\n(0~1)"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="@id/lsq_main_audio_volume_title"
            app:layout_constraintRight_toRightOf="@id/lsq_main_audio_volume_title"
            app:layout_constraintTop_toBottomOf="@id/lsq_main_audio_volume_title" />

        <SeekBar
            android:id="@+id/lsq_sub_audio_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:max="100"
            android:maxHeight="4dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:progress="100"
            android:progressDrawable="@drawable/lsq_model_seekbar_bg"
            android:thumb="@drawable/lsq_model_seekbar_thumb"
            android:thumbOffset="0dp"
            app:layout_constraintBottom_toBottomOf="@id/lsq_sub_audio_volume_title"
            app:layout_constraintLeft_toLeftOf="@id/lsq_start_bar"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/lsq_sub_audio_volume_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
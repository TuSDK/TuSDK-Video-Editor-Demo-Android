<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--返回按钮-->
    <ImageView
        android:id="@+id/lsq_editor_component_text_font_back"
        android:layout_width="38dp"
        android:layout_height="wrap_content"
        android:src="@drawable/edit_ic_return"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <RelativeLayout
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="20dp"
        android:id="@+id/lsq_anitext_in_list_panel"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/lsq_editor_component_text_font_back">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginEnd="20dp"
            android:id="@+id/lsq_anitext_in_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <TextView
        android:id="@+id/lsq_blend_mix_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:text="动画时长"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/lsq_anitext_in_list_panel"
        app:layout_constraintTop_toBottomOf="@id/lsq_anitext_in_list_panel" />

    <cn.bar.DoubleHeadedDragonBar
        android:layout_marginEnd="20dp"
        android:id="@+id/lsq_anitext_in_duration_bar"
        app:bg_color="@color/lsq_color_api_gray"
        app:button_height="30dp"
        app:button_img="@mipmap/sel_ic"
        app:button_width="30dp"
        app:seek_height="4dp"
        app:layout_constraintBottom_toBottomOf="@id/lsq_blend_mix_title"
        app:layout_constraintTop_toTopOf="@id/lsq_blend_mix_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/lsq_blend_mix_title"
        android:layout_width="0dp"
        android:layout_height="20dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
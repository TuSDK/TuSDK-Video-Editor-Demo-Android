<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:layout_marginEnd="10dp">

    <ImageView
        android:id="@+id/lsq_scene_icon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:gravity="center"
        android:text=""
        android:background="@color/lsq_alpha_white_99"
        android:textColor="@color/white"
        android:id="@+id/lsq_scene_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/lsq_scene_icon"
        app:layout_constraintLeft_toLeftOf="@id/lsq_scene_icon"
        app:layout_constraintRight_toRightOf="@id/lsq_scene_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>